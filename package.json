{
  "name": "typescript-webpack-starter",
  "version": "0.2.0",
  "description": "A damn simple starter for Typescript and Webpack",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run server:dev",
    "server:dev": "webpack-dashboard -- webpack-dev-server --config ./config/webpack.dev.js --inline --progress --watch --open",
    "test:dev": "webpack-dev-server --config ./config/webpack.dev.js --inline --progress --watch --open",
    "server:prod": "webpack-dashboard -- webpack-dev-server --config ./config/webpack.prod.js --port 3000 --host 0.0.0.0 --hot --inline --progress --profile --watch --open --content-base dist/",
    "build:dev": "webpack --config ./config/webpack.dev.js --progress --profile --color --display-error-details --display-cached",
    "build:prod": "webpack --config ./config/webpack.prod.js  --progress --profile --color --display-error-details --display-cached --bail",
    "clean": "npm cache clear && rimraf -- dist",
    "karma": "karma start",
    "lint": "npm run tslint \"src/**/*.ts\"",
    "test": "npm run lint && npm run karma",
    "analyze": "cross-env ANALYSE=true npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emyann/typescript-webpack-starter"
  },
  "author": "yrenaudin",
  "license": "ISC",
  "devDependencies": {
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.14",
    "awesome-typescript-loader": "^3.2.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.2.0",
    "expose-loader": "^0.7.3",
    "file-loader": "^0.11.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "jasmine-core": "^2.6.4",
    "karma": "^1.7.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "^2.0.4",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "script-ext-html-webpack-plugin": "^1.8.5",
    "script-loader": "^0.7.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "tslint": "^5.5.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-server": "2.5.1",
    "webpack-merge": "^4.1.0"
  }
}
